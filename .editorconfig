# EditorConfig: http://EditorConfig.org

root = true

[*]
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8


[*.py]
indent_size = 4
indent_style = space

[*.{yml,yaml}]
indent_style = space

[*.md]
indent_style = space

[Pipfile.lock]
indent_style = space
